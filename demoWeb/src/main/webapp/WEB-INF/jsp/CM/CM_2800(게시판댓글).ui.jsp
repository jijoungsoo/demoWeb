<div style="width: 740px;" name="cmt_area">
  <input type="hidden"  name="BRD_SEQ"  data-ax-path="BRD_SEQ">
  <div class="my-3 p-3 bg-body rounded shadow-sm">
    
    <h6 class="border-bottom pb-2 mb-0 tal">
      <div style="width:200px;border: solid 1px red;float:left;" class="tal vam">댓글 리스트</div>        
      <input type="button" name='saveCmt' class="btn btn-primary mb-3 vam" value="C" />
      <input type="button" name='searchCmt' class="btn btn-primary mb-3 vam" value="S" />
    </h6>
    <div name="cmt_list"></div>
  </div>
</div>


<!--입력/수정 팝업-->
<div name="popup_cmt" style="display: none">
  <div class="row row-cols-4">
      <div class="col-sm">
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">BRD_SEQ</span> 
            <input type="text" class="form-control" name="BRD_SEQ" data-ax-path="BRD_SEQ" disabled>  
          </div>
        </div>
      </div>
      <div class="col-sm">
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">CMT_SEQ</span> 
            <input type="text" class="form-control" name="CMT_SEQ" data-ax-path="CMT_SEQ" disabled> 
          </div>
        </div>
      </div>
      <div class="col-sm">
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">등록일</span> <input type="text" class="form-control" name="CRT_DTM"  data-ax-path="CRT_DTM"  id="datepicker-input" aria-label="Date-Time" disabled> 
          </div>
        </div>
      </div>
    </div>
    <div class="row row-cols-4">
      <div class="col-sm">
        <div name="toolbar-container"></div>
        <div name="CNTNT"  data-ax-path="CNTNT"></div>
      </div>
    </div>
    <div style="padding: 10px;">
      <input type="button" name="save" value="저장" /> <input type="button"
        name="close" value="닫기" />
    </div>
  </div>
  

<script name="brd_cmt-template" type="text/x-handlebars-template">
{{#cmtList}}  
  <div class="d-flex text-muted pt-3">
    <div class="pb-3 mb-0 small lh-sm border-bottom w-100">
      <div style="border: solid 0px red; width: 100px;float: left;" class="vam">
        <input type="button" name='modifyCmt' class="btn btn-primary mb-3" value="M" cmt_seq="{{CMT_SEQ}}" >
        <input type="button" name='delCmt' class="btn btn-primary mb-3" value="X" cmt_seq="{{CMT_SEQ}}" >
      </div>
      <div class="d-flex tal">
        [<strong class="text-gray-dark">{{CMT_SEQ}}</strong>]
        [<strong class="text-gray-dark">{{CRT_USR_NO}}</strong>]        
        {{{CNTNT}}}
      </div>      
    </div>
  </div>
{{/cmtList}}  
</script>